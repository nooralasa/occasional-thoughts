      <style media="screen" type="text/css">

      
      .modal-dialog{
        position: relative;
        top: 50%;
      }

      .modal-content{
        width:60%;
        margin: auto;
      }

      #sign{
        background-color: transparent;
        background: transparent;
        border: transparent;
      }





      //
      * {margin: 0; padding: 0;}
      body{
        padding-top: 8%;
      }

      div {
        margin: 20px;
      }

      ul {
        list-style-type: none;
        width: 600px;
      }

      h3 {
        font: bold 20px/1.5 Helvetica, Verdana, sans-serif;
      }

      li img {
        float: left;
        margin: 0 15px 0 0;
      }

      li p {
        font: 200 13.5px/1.5 Cambria, Times New Roman, serif;
      }

      li {
        padding: 10px;
        overflow: auto;
      }

      li:hover {
        background: #eee;
        cursor: pointer;
      }


    </style>

  </head>

  <body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">




    <!-- Navigation -->
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
            <i class="fa fa-bars"></i>
          </button>
          <a class="navbar-brand page-scroll" href="#page-top">
            <span class="light">Occasional</span> Thoughts
          </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
          <ul class="nav navbar-nav">
            <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
            <li class="hidden">
              <a href="#page-top"></a>
            </li>
            <li>
              <!-- <a id="signOutModal" class="page-scroll" href = "#">Sign Out</a> -->
              <a  id = "sign" class="btn btn-primary btn-xl" data-toggle="modal" data-target="#signOutModal">Sign Out</a>
            </li>
            <li>
              <a class="page-scroll" href="#create">Create New Occasion</a>
            </li>
            <li>
              <a class="page-scroll" href="#contact">Contact</a>
            </li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container -->
    </nav>

    <!-- Intro Header -->
    <header class="intro">
      <div class="intro-body">
        <div class="container">
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <!-- <h1 class="brand-heading">Occasional Thoughts</h1> -->
              <p class="intro-text"><%=user.name%>'s Occasions</p>
              <ul>
                <% var numOccasions = user.createdOccasions.length %>
                <% for (var i=0; i< numOccasions; i++) { %>

                <a href="/occasions/<%=user.createdOccasions[i]._id%>">

                  <li>
                    <img src="http://lorempixum.com/100/100/nature/4" />
                    <!-- <img src="<%=user.createdOccasions[i].coverPhoto%>" /> -->
                    <h3><%=user.createdOccasions[i].title%></h3>
                    <p align= "left" ><%=user.createdOccasions[i].description%> </p>
                  </li>
                </a>
                <% } %>
              </ul>
            
            </div>

            <div class="col-md-8 col-md-offset-2">
            <!-- <h1 class="brand-heading">Occasional Thoughts</h1> -->
              <% var numOccasions = user.viewableOccasions.length%>
              <% if (numOccasions != 0){ %>
                <p class="intro-text">Other Occasions Viewable By <%=user.name%></p>
              <% } %>
              <ul>
                <% for(var i=0; i< numOccasions; i++) { %>

                <a href="/occasions/<%=user.viewableOccasions[i]._id%>">
                  <li>
                    <img src="http://lorempixum.com/100/100/nature/4"/>
                    <!-- <img src="<%=user.viewableOccasions[i].coverPhoto%>" /> -->
                    <h3><%=user.viewableOccasions[i].title%></h3>
                    <p align= "left" ><%=user.viewableOccasions[i].description%> </p>
                  </li>
                </a>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Custom Theme JavaScript -->
    <script src="js/grayscale.js"></script>
  </body>
</html>





