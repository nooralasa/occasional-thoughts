<!DOCTYPE html>
<!-- Creates model for Creating an Occasion -->
<!-- @author: Usman--> 

 <!-- Register Modal -->
            <div id="createOccasionModal" class="modal fade" role="dialog">
              <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content" style="padding:20px">
                

                 <form role="form" action="" method="post" class="registration-form">
                            
                            <fieldset>
                              <div class="form-top">
                                <div class="form-top-left">
                                  <h3>Create an Occasion!</h3>
                                </div>
                                <div class="form-top-right">
                                  <img id = "logo" src="/img/OccasionalThoughts_logo_blue.png"class="img-responsive" alt="">
                                </div>
                                </div>
                                <div class="form-bottom">


                                 <div class="form-group">
                                  <div class="input-group">
                                    <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-th"></span>
                                    </span>
                                    <input type="text" name="title" placeholder="Title" class="form-first-name form-control" id="form-first-name">
                                  </div>
                                </div>

                                <div class="form-group">
                                  <div class="input-group">
                                    <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-pencil"></span>
                                    </span>
                                    <input type="text" name="description" placeholder="Description" style = "height:150px; width: 100%" class="form-first-name form-control" id="form-first-name">
                                  </div>
                                </div>

                                <div id = "preview" style="width: 100%; height: 200px; border: 3px solid #DDDDDD; margin-bottom:15px">
                                  <img id = "previewImg" src="http://simpleicon.com/wp-content/uploads/camera.png" style = "max-width:100%; max-height:100%; margin-left:auto; margin-right:auto" class="img-responsive" alt="">
                                </div>

                                <div class="form-group">
                                  <div class="input-group">
                                    <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-picture"></span>
                                    </span>
                                    <input type="text" name="coverPhoto" placeholder="Cover Photo URL" class="form-first-name form-control" id="url">
                                  </div>
                                  <a id="upload" class="btn btn-primary btn-block">Upload</a>
                                </div>

                            </div>
                            <input type="submit" role="button" id="createOccasion" class="btn btn-primary" style = "position:relative; left:50%; margin:8px" value= "Create Occasion">
                            <a id="cancel" class="btn btn-primary" style = "position:relative; right:45%; margin:8px">Cancel</a>
                            <a id="next" class="btn btn-primary" style = "position:relative; right:25%; margin:8px">Next</a>
                          </fieldset>
                          
                          <fieldset>
                              <div class="form-top">
                                <div class="form-top-left">
                                  <h3>Create an Occasion</h3>
                                </div>
                                <div class="form-top-right">
                                  <img id = "logo" src="/img/OccasionalThoughts_logo_blue.png"class="img-responsive" alt="">
                                </div>
                                </div>
                                <div class="form-bottom">
                                <div id = "privacyForm" class="form-group email">
                                  <p style = "color:#000000; font-size:20px"> Who can add a thought? </p>
                                  <label class="checkbox-inline"><input type="radio" name = "toggler" value="1">Anyone with a link</label>
                                  <label class="checkbox-inline"><input type="radio" name = "toggler" value="2">Only specific people</label>
                                </div>

                                <div id="blk-1" class="toHide" style="display:none">
                                    <p style="color:#000000; font-size:16px"> Here is your public link to the occasion</p> 
                                    <div class="form-group">
                                    <div class="input-group">
                                      <span class="input-group-addon">
                                        <span> Public Link: </span>
                                      </span>
                                      <input type="text" name="publicLink" placeholder="http://doodle.com/poll/hzf2f2igdh3i7p5s" class="form-first-name form-control" id="form-first-name">
                                    </div>
                                    </div>

                                    <p style="color:#000000; font-size:16px"> Share it with your facebook friends!</p> 

                                    <a class="btn btn-block btn-social btn-facebook">
                                      <span class="fa fa-facebook"></span> Share link on Facebook Messenger
                                    </a>
                                </div>


                                <div id="blk-2" class="toHide" style="display:none">
                                    <p style="color:#000000; font-size:16px" class="email"> Select friends to invite to your occasion:</p> 
                                    <div class="form-group email">
                                      <div class="input-group">
                                        <span class="input-group-addon">
                                          <span class="glyphicon glyphicon-user"></span>
                                        </span>
                                        <input id="share" name="friends" type="text" class="form-control" placeholder="Select Friends" />
                                      </div>
                                    </div>

                                    <div id="friends-div" class = "email">
                                    </div>  

                                    <div id="emailSent" class="toHide">
                                      <p style="color:#000000; font-size:20px; position:relative; left:10%">Your friends have been invited to the occasion!</p>

                                      <input role="button" id="inviteFriends" class="btn btn-primary btn-lg" style = "position:relative; left:25%; margin:8px" value= "Invite More Friends">

                                      <p style="color:#000000; font-size:16px; position:relative; left:48%">Or</p>

                                      <input type="submit" role="button" id="createOccasion" class="btn btn-primary btn-lg" style = "position:relative; left:38%; margin:8px" value= "Finish!">

                                    </div> 

                                    <div id="sendEmail">
                                      <a id = "emailBtn" class="btn btn-block btn-social btn-google email">
                                        <span class="fa fa-google"></span> Send Email to Selected Friends
                                      </a>
                                    </div>
                            </div>

                            
                            <a id="cancel" class="btn btn-primary" style = "position:relative; right:50%; margin:8px">Cancel</a>

                          </fieldset>
                          
                          <fieldset>
                              <div class="form-top">
                                <div class="form-top-left">
                                  <h3>Step 3 / 3</h3>
                                    <p>Social media profiles:</p>
                                </div>
                                <div class="form-top-right">
                                  <i class="fa fa-twitter"></i>
                                </div>
                                </div>
                                <div class="form-bottom">
                              <div class="form-group">
                                <label class="sr-only" for="form-facebook">Facebook</label>
                                  <input type="text" name="form-facebook" placeholder="Facebook..." class="form-facebook form-control" id="form-facebook">
                                </div>
                                <div class="form-group">
                                  <label class="sr-only" for="form-twitter">Twitter</label>
                                  <input type="text" name="form-twitter" placeholder="Twitter..." class="form-twitter form-control" id="form-twitter">
                                </div>
                                <div class="form-group">
                                  <label class="sr-only" for="form-google-plus">Google plus</label>
                                  <input type="text" name="form-google-plus" placeholder="Google plus..." class="form-google-plus form-control" id="form-google-plus">
                                </div>
                                <button type="button" class="btn btn-previous">Previous</button>
                                <button type="submit" class="btn">Sign me up!</button>
                            </div>
                          </fieldset>
                        
                        </form>


              </div>

              </div>
              </div>