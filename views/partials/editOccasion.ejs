<!DOCTYPE html>

<!-- Creates model for Creating an Occasion -->
<!-- @author: Usman--> 

 <!-- Register Modal -->

            <div id="editOccasionModal" class="modal fade" role="dialog">
              <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content" style="padding:20px">
                

                 <form role="form" action="" method="post" class="registration-form">
                            
                            <fieldset>
                              <div class="form-top">
                                <div class="form-top-left">
                                  <h3>Edit Your Occasion</h3>
                                </div>
                                <div class="form-top-right">
                                  <img id = "logo" src="/img/OccasionalThoughts_logo_blue.png"class="img-responsive" alt="">
                                </div>
                                </div>
                                <div class="form-bottom">



                                 <div class="form-group">
                                  <div class="input-group">
                                    <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-gift"></span>
                                    </span>
                                    <input type="text" name="title" class="form-first-name form-control" id="edited-title">
                                  </div>
                                </div>

                                <div class="form-group">
                                  <div class="input-group">
                                    <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-pencil"></span>
                                    </span>
                                    <textarea cols="50" rows="20" class="form-first-name form-control" id="edited-description"></textarea>
                                  </div>
                                </div>

                                <div id = "preview"style="display:none; width: 100%; height: 200px; border: 3px solid #DDDDDD; margin-bottom:15px">
                                  <img id = "previewImg" src="http://simpleicon.com/wp-content/uploads/camera.png" style = "max-width:100%; max-height:100%; margin-left:auto; margin-right:auto" class="img-responsive" alt="">
                                </div>

                                <div class="form-group">
                                  <div class="input-group">
                                    <span class="input-group-addon">
                                      <span class="glyphicon glyphicon-picture"></span>
                                    </span>

                                    <input name="coverPhoto" class="form-first-name form-control" id="url">
                                    <span class="input-group-btn">
                                      <a id="upload" class="btn btn-primary">Preview</a>
                                    </span>
                              
                              
                                  </div>
                                </div>

                                <div>
                                  
                                </div>

                                

                            </div>
                            <a id="done" class="btn btn-primary" style = "position:relative; margin:8px;">Done!</a>
                          </fieldset>
                          


                          
                          
                        
                        </form>


              </div>

              </div>
              </div>