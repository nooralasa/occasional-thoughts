<!-- Adds occasion list items to the Occasions page-->
<!-- @author:Suniyya-->
<link rel="stylesheet" href="http://jquery-ui.googlecode.com/svn/tags/latest/themes/base/jquery.ui.theme.css" type="text/css" />
<link rel="stylesheet" href="http://jquery-ui.googlecode.com/svn/tags/latest/themes/base/jquery.ui.base.css" type="text/css" />

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <p class="intro-text"><%=user.name%>'s Occasions</p>
    <ul>
      <% var numOccasions = user.createdOccasions.length %>
      <% for (var i=0; i< numOccasions; i++) { %>

      <a href="/occasions/<%=user.createdOccasions[i]._id%>">
        <input name="occasionId" value="<%=user.createdOccasions[i]._id%>" type="hidden">

        <li style = "position:relative" id="<%=user.createdOccasions[i]._id%>">
          <img src="http://lorempixum.com/100/100/nature/4" />
          <h3><%=user.createdOccasions[i].title%></h3>
          <p align= "left" ><%=user.createdOccasions[i].description%> </p>
          <div id="delete-occasion" class="ui-state-default ui-corner-all" title=".ui-icon-carat-1-n">
            <span class="ui-icon ui-icon-trash"></span>
          </div>
          <div  id = "edit-occasion" class="ui-state-default ui-corner-all" title=".ui-icon-carat-1-n">
            <span class="ui-icon ui-icon-pencil"></span>
          </div>

        </li>
      </a>
      <% } %>
    </ul>
  
  </div>

  <div class="col-md-8 col-md-offset-2">
    <% var numOccasions = user.viewableOccasions.length%>
    <% if (numOccasions != 0){ %>
      <p class="intro-text">Other Occasions Viewable By <%=user.name%></p>
    <% } %>
    <ul>
      <% for(var i=0; i< numOccasions; i++) { %>

      <a href="/occasions/<%=user.viewableOccasions[i]._id%>">
        <input name="occasionId" value="<%=user.viewableOccasions[i]._id%>" type="hidden">

        <li style = "position:relative" id="<%=user.viewableOccasions[i]._id%>">
          <img src="http://lorempixum.com/100/100/nature/4"/>
          <h3><%=user.viewableOccasions[i].title%></h3>
          <p align= "left" ><%=user.viewableOccasions[i].description%> </p>
          <div id="delete-occasion" class="ui-state-default ui-corner-all" title=".ui-icon-carat-1-n">
            <span class="ui-icon ui-icon-trash"></span>
          </div>
          <div  id = "edit-occasion" class="ui-state-default ui-corner-all" title=".ui-icon-carat-1-n">
            <span class="ui-icon ui-icon-pencil"></span>
          </div>

        </li>
      </a>
      <% } %>
    </ul>
  </div>
</div>