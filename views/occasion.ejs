  <!-- Intro Header -->
  <header class="intro">
    
    <div class="intro-body">
      <div class = "coverContainer">
          <img src= <%= occasion.coverPhoto%>>
      </div>
      <div class="container">
        <div class="row">
           
          <div class="col-md-8 col-md-offset-2">
            <!-- <h1 class="brand-heading">Occasional Thoughts</h1> -->
            <p class="intro-text"><%=occasion.title%></p>

            <%if (!occasion.isPublished) { %>

              <div style="padding:20px">
                <h5 class="text-center" style="color:#000000">New Thought</h5>

                  <form class="form form-signup" role="form" >
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span>
                        </span>
                        <input name = "message" type="text" class="form-control" style="height: 200px" placeholder="Add a thought" />
                      </div>
                    </div>
        
                    <input type = "submit" class="btn btn-sm btn-primary btn-block" role="button" value = "Submit"> 
                  </form>
              </div>

            <% } %>


            <ul>

              <% var numThoughts = occasion.thoughts.length%>
              <% for (var i=0; i<numThoughts; i++) { %>
              <div class="thought">
                   <li >
                    <img src="<%=occasion.thoughts[i].photo%>">
                    <h3 align="left"><%=occasion.thoughts[i].creator.firstName +" "+occasion.thoughts[i].creator.lastName %></h3>
                    <p align= "left" > <%=occasion.thoughts[i].message%></p>
                  </li>
              </div>
              <% } %>
            </ul>
          
          </div>
        </div>
      </div>
    </div>
  </header>
  
